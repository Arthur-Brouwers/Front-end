{
  "extends": "./tsconfig.app.json",
  "exclude": [],
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "module": "esnext",
    "target": "es5",
    "lib": [
      "esnext",
      "dom"
    ],
    "composite": true,
    "types": [ "node", "jsdom" ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "jsx": "preserve",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}
